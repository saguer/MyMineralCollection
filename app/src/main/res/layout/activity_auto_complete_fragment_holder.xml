<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mymineralcollection.example.org.mymineral.AutocompleteFragment.AutoComplete">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <mymineralcollection.example.org.mymineral.AddMineral.Autocomplete.CustomAutoCompleteView
                android:id="@+id/myautocomplete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:imeOptions="actionNext">
            </mymineralcollection.example.org.mymineral.AddMineral.Autocomplete.CustomAutoCompleteView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#587bcc"
            android:id="@+id/main_fragment" />
    </LinearLayout>

</RelativeLayout>
